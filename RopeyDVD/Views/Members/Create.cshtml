@model RopeyDVD.Models.Member

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Create";
}


<div class="card p-5 col-lg-9 col-12 mx-auto">
    <h1 class="text-center">Create Member</h1>

    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="MemberLastName" class="control-label"></label>
            <input asp-for="MemberLastName" class="form-control" />
            <span asp-validation-for="MemberLastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MemberFirstName" class="control-label"></label>
            <input asp-for="MemberFirstName" class="form-control" />
            <span asp-validation-for="MemberFirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MembershipCategory" class="control-label"></label>
            <input asp-for="MembershipCategory" class="form-control" />
            <span asp-validation-for="MembershipCategory" class="text-danger"></span>
            </div>
        <div class="form-group">
            <label asp-for="MemberAddress" class="control-label"></label>
            <input asp-for="MemberAddress" class="form-control" />
            <span asp-validation-for="MemberAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MemberDOB" class="control-label"></label>
            <input asp-for="MemberDOB" class="form-control" />
            <span asp-validation-for="MemberDOB" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="form-group col-12 col-md-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="col-12 col-md-4">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
