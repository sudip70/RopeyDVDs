@model RopeyDVD.Models.Loan

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Create Loan";
}

<div class="card p-5 col-lg-9 col-12 mx-auto">
    <h1 class="text-center">Create Loan</h1>
    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="LoanTypeNumber" class="control-label">Loan Type</label>
            <select asp-for="LoanTypeNumber" class="form-control" asp-items="ViewBag.LoanTypeNumber"></select>
        </div>
        <div class="form-group">
            <label asp-for="CopyNumber" class="control-label">Copy</label>
            <select asp-for="CopyNumber" class="form-control" asp-items="ViewBag.CopyNumber"></select>
        </div>
        <div class="form-group">
            <label asp-for="MemberNumber" class="control-label">Member</label>
            <select asp-for="MemberNumber" class="form-control" asp-items="ViewBag.MemberNumber"></select>
        </div>
        <div class="form-group">
            <label asp-for="DateOut" class="control-label"></label>
            <input asp-for="DateOut" class="form-control" />
            <span asp-validation-for="DateOut" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateDue" class="control-label"></label>
            <input asp-for="DateDue" class="form-control" />
            <span asp-validation-for="DateDue" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateReturned" class="control-label"></label>
            <input asp-for="DateReturned" class="form-control" />
            <span asp-validation-for="DateReturned" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="form-group col-12 col-md-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="col-12 col-md-4">
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
