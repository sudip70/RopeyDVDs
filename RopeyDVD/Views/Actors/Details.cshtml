@model RopeyDVD.Models.Actor

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Details";
}

<div class="card p-5 col-lg-9 col-12 mx-auto">
    <h1 class="text-center">Actor Details</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ActorSurName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ActorSurName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ActorFirstName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ActorFirstName)
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="col-12 col-md-4">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ActorNumber">Edit</a>
        </div>
        <div class="col-12 col-md-4">
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
