@model RopeyDVD.Models.UserLoginModel

@{
    Layout = "_LayoutAuth";
    ViewData["Title"] = "Login";
}
<div class="card card-auth col-12 col-lg-8 mx-auto">
    <div class="row">
        
        <div class="col-6 p-0 text-center d-none d-lg-block">
            <div class="brand">
                <div class="brand-white">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                        <img class="logo brand-img" src="~/imgs/nobg/ropey.png" alt="logo" />
                    </a>
                    <a class="btn btn-secondary" asp-area="" asp-controller="Auth" asp-action="RegisterUser">Register Assistant</a>
                    <a class="btn btn-secondary" asp-area="" asp-controller="Auth" asp-action="RegisterAdmin">Register Manager</a>
                </div>
            </div>
            <img class="card-img" alt="scenery" src="~/imgs/login.gif" />
        </div>
        <div class="col-12 col-lg-6 p-5">
            <h2 class="mb-5 text-center">Login</h2>

            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="UserName" placeholder="Username" class="form-control my-3" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="UserPassword" placeholder="Password" class="form-control my-3" />
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <span class="d-lg-none d-block">
                    <p class="mb-0 mt-3 text-left">Don't Have an Account? Register as a 
                        <a asp-controller="Auth" asp-action="RegisterUser">User</a> or 
                        <a asp-controller="Auth" asp-action="RegisterAdmin">Admin</a>.</p>
                </span>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
