@model RopeyDVD.Models.UserRegister

@{
    Layout = "_LayoutAuth";
    ViewData["Title"] = "Register Admin";
}
<div class="card card-auth col-12 col-lg-8 mx-auto">
    <div class="row">
        
        <div class="col-6 p-0 text-center d-none d-lg-block">
            <div class="brand">
                <div class="brand-white">
                    <img class="logo brand-img" src="~/imgs/nobg/ropey.png" alt="logo" />
                    <a class="btn btn-secondary" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                    <a class="btn btn-secondary" asp-area="" asp-controller="Auth" asp-action="RegisterUser">Register User</a>
                </div>
            </div>
            <img class="card-img" alt="scenery" src="~/imgs/login.gif" />
        </div>
        <div class="col-12 col-lg-6 p-5">
            <h2 class="mb-5 text-center">Register Admin</h2>
            
            <form asp-action="RegisterAdmin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input placeholder="Username" asp-for="UserName" class="form-control my-3" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input placeholder="Email" asp-for="Email" class="form-control my-3" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input placeholder="Password" asp-for="UserPassword" class="form-control my-3" />
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Register Admin" class="btn btn-primary" />
                </div>
                <span class="d-lg-none d-block">
                    <p class="mb-0 mt-3 text-left">Already Have an Account?
                        <a asp-controller="Auth" asp-action="Login">Login</a> or 
                        Register as an 
                        <a asp-controller="Auth" asp-action="RegisterAdmin">Admin</a>.</p>
                </span>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
