@model RopeyDVD.Models.DVDCopy

@{
    ViewData["Title"] = "Details";
}
<div class="card p-5 col-lg-9 col-12 mx-auto">
    <h1 class="text-center">Details DVD</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.DatePurchased)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.DatePurchased)
            </dd>
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.DVDTitle)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.DVDTitle.DVDNumber)
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="col-12 col-md-4">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.CopyNumber">Edit</a> 
        </div>
        <div class="col-12 col-md-4">
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
