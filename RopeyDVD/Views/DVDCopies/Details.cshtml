@model RopeyDVD.Models.DVDCopy
@{
    ViewData["Title"] = "Details";
}
<div class="card p-5 col-lg-9 col-12 mx-auto">
    <h1 class="text-center">Details DVD</h1>

    <div>
        <hr />
        <dl class="row">
        <dt class = "col-sm-4">
            DVD Copy Number
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.CopyNumber)
        </dd>
        <dt class = "col-sm-4">
            DVD Number
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.DVDTitle.DVDNumber)
        </dd>
        <dt class = "col-sm-4">
            DVD Title
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.DVDTitle.DVDTitles)
        </dd>
        <dt class = "col-sm-4">
            DVD Copy Purchased On
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.DatePurchased)
        </dd>
        @if (ViewBag.lastLoanMemberName != null)
        {
            <dt class = "col-sm-4">
            Last Loaned By
        </dt>
        <dd class = "col-sm-8">
            @ViewBag.lastLoanMemberName
        </dd>
        <dt class = "col-sm-4">
            Loaned On
        </dt>
        <dd class = "col-sm-8">
            @ViewBag.loanData.DateOut
        </dd>
        <dt class = "col-sm-4">
            Loan Due On 
        </dt>
        <dd class = "col-sm-8">
            @ViewBag.loanData.DateDue
        </dd>
        <dt class = "col-sm-4">
            Returned On
        </dt>
        <dd class = "col-sm-8">
            @(ViewBag.loanData.DateReturned ?? "Not Returned Yet")
        </dd>
        }
    </dl>
    </div>
    <div class="row">
        <div class="col-12 col-md-4">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.CopyNumber">Edit</a> 
        </div>
        <div class="col-12 col-md-4">
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
