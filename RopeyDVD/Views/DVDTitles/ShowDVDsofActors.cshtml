@{
    ViewData["Title"] = "ShowDVDsofActors";
}
<h1> Show all the DVDs of Actors</h1>

@if(Model!=null){
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Actor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@foreach(var value in item.Cast)
                        {
                            <p>@value</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else{
    <p>No data</p>
}