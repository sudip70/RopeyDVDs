@model RopeyDVD.Models.DVDTitle

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Delete";
}

<div class="card p-5 col-lg-9 col-12 mx-auto">
    <h1 class="text-center">Delete</h1>

    <p class="txt-secondary text-center"Are you sure you want to delete this?</p>
    <div>
        <h4>DVDTitle</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DVDTitles)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DVDTitles)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateReleased)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateReleased)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.StandardCharge)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.StandardCharge)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.PenaltyCharge)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.PenaltyCharge)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DVDCategory)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DVDCategory.CategoryNumber)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Studio)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Studio.StudioNumber)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Producer)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Producer.ProducerNumber)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <div class="row">
                <input type="hidden" asp-for="DVDNumber" />
                <div class="form-group col-12 col-md-4">
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                </div>
                <div class="col-12 col-md-4">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
