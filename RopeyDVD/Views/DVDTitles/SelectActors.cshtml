@model Actor
@{
    ViewData["Title"] = "SelectActors";
}
<div class="card p-5 col-lg-9 col-12 mx-auto">
    <h1 class="text-center">Select Actors</h1>
    <hr />
    <form asp-action="ShowDVDsofActors">
        <div asp-validation-summary="ModelOnly" class="text"></div>
        <div class="form-group mt-3">
            <div class="conatiner overflow-hidden">
                <label asp-for="ActorSurName" class="control-label">View DVDs of the selected Actors</label>
                <div class="row">
                    <div class="col-md-9 col-12 mt-2">
                        <select asp-for="ActorSurName" class="form-control" asp-items="ViewBag.ActorSurName"
                            name="actorList"></select>
                    </div>
                    <div class="col-md-3 col-12">
                        <button class="btn btn-primary" type="submit">Select Actor</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <form asp-action="ShowDVDCopiesofActors">
        <div asp-validation-summary="ModelOnly" class="text"></div>
        <div class="form-group mt-3">
            <label asp-for="ActorSurName" class="control-label">View DVD copies of the selected Actors</label>
            <div class="row">
                <div class="col-md-9 col-12 mt-2">
                    <select asp-for="ActorSurName" class="form-control" asp-items="ViewBag.ActorSurName"
                        name="actorList"></select>
                </div>
                <div class="col-md-3 col-12">
                    <button class="btn btn-primary" type="submit">Select Actor</button>
                </div>
            </div>
        </div>
    </form>
</div>

